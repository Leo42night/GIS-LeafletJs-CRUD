language = "php"

run = [
    "php", "artisan", "serve",
    "--host", "0.0.0.0",
    "--port", "8000"
]

entrypoint = "routes/web.php"

hidden = [
    "artisan",

    ".editorconfig",
    ".gitattributes",
    ".gitignore",
    ".styleci.yml",

    "composer.lock",
    "vendor",
    "phpunit.xml"
]
modules = ["nodejs-20:v8-20230920-bd784b9"]

[packager]
language = "php"

[[ports]]
localPort = 8000
externalPort = 80
